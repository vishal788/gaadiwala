<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#059F80"
    android:padding="13sp"
    tools:context=".Otp_page">

    <LinearLayout
        android:id="@+id/lin_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear_02"
        android:layout_below="@+id/lin_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <View
            android:layout_width="25sp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Mobile Number"/>

        <View
            android:layout_width="10sp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+91 9982843342"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_02"
        android:layout_centerInParent="true"
        android:padding="35sp">


        <LinearLayout
            android:id="@+id/linear_demo_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENTER (OTP) HERE" />


        </LinearLayout>


        <View
            android:id="@+id/margin_space"
            android:layout_width="30sp"
            android:layout_height="40dp"
            android:layout_below="@+id/linear_demo_04"
            android:layout_gravity="center" />


        <LinearLayout
            android:id="@+id/linear_otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/margin_space"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="4">

            <EditText
                android:id="@+id/otp_edit_box1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="1sp"
                android:layout_weight="1"
                android:background="@drawable/square_border"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/otp_edit_box2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="1sp"
                android:layout_weight="1"
                android:background="@drawable/square_border"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/otp_edit_box3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="1sp"
                android:layout_weight="1"
                android:background="@drawable/square_border"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/otp_edit_box4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_border"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="30sp" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relative_demo_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_otp_layout"
            android:gravity="end">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/resend_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Resend OTP in"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="3sp"
                    android:layout_height="11sp"
                    android:layout_gravity="center" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/resend_text"
                    android:gravity="end"
                    android:text="15 seconds"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_demo_01"
            android:layout_marginTop="50sp"
            android:background="@color/buttoncolor"
            android:letterSpacing="0.1"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/request_another_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_btn"
            android:layout_centerInParent="true"
            android:layout_marginTop="35sp"
            android:text="Request another OTP"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>




</RelativeLayout>